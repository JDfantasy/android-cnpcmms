<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/commonality_interface"
    android:orientation="vertical"
    android:padding="2dp" >

    <TextView
        android:id="@+id/textView_item_supplier_page_approve_item_title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="最后一周的维修单"
        android:textColor="@color/fengexian"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:background="@drawable/baise_shape"
        android:orientation="horizontal"
        android:padding="4dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/item_yuan" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/dingdanxinxi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dp"
                    android:paddingTop="2dp"
                    android:text="订单信息"
                    android:textColor="@color/heise" />

                <TextView
                    android:id="@+id/textView_item_supplier_dingdanfenpei_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/dingdanxinxi"
                    android:layout_alignParentRight="true"
                    android:paddingRight="6dp"
                    android:text="已报修5天"
                    android:textColor="@color/color_of_progress" />
            </RelativeLayout>

            <com.cnpc.zhibo.app.view.DashedLine
                android:id="@+id/dashedLine1"
                android:layout_width="match_parent"
                android:layout_height="10px"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/relativeLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp" >

                    <TextView
                        android:id="@+id/textVew"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="编号:" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/textVew"
                        android:layout_below="@+id/textVew"
                        android:text="名称:" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView1"
                        android:layout_toLeftOf="@+id/jiayouzhanmingcheng"
                        android:text="问题:" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView2"
                        android:layout_toLeftOf="@+id/jiayouzhanmingcheng"
                        android:text="时间:" />

                    <TextView
                        android:id="@+id/shijian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/wenti"
                        android:layout_toRightOf="@+id/textView2"
                        android:paddingLeft="5dp"
                        android:text="2016.2.16 18:00" />

                    <TextView
                        android:id="@+id/jiayouzhanmingcheng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView1"
                        android:layout_alignBottom="@+id/textView1"
                        android:layout_toRightOf="@+id/textView1"
                        android:paddingLeft="5dp"
                        android:text="月坛加油站" />

                    <TextView
                        android:id="@+id/wenti"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView2"
                        android:layout_alignBottom="@+id/textView2"
                        android:layout_alignLeft="@+id/shijian"
                        android:paddingLeft="5dp"
                        android:text="加油站不出油" />

                    <TextView
                        android:id="@+id/textView_item_supplier_dingdanfenpei_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/textView1"
                        android:layout_alignLeft="@+id/jiayouzhanmingcheng"
                        android:paddingLeft="5dp"
                        android:text="C11178026179" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativelayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0" >

                    <com.cnpc.zhibo.app.view.Myroundcacheimageview
                        android:id="@+id/wentitupian"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_margin="6dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/iconfont_jiayouzhan" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/item_yuan" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="10dp" />

</LinearLayout>