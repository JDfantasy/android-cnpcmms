<?xml version="1.0" encoding="utf-8"?>
<!-- 站长端证件照列表的布局文件 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/commonality_interface"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/baise"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <TextView
            android:id="@+id/textView_item_centre_certificate_certificatetype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="营业执照" />

        <com.cnpc.zhibo.app.view.DashedLine
            android:id="@+id/dashedLine1"
            android:layout_width="match_parent"
            android:layout_height="10px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView_item_centre_certificate_keeper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/zitiyanse3"
                    android:layout_marginBottom="2dp"
                    android:text="保管人：李杰" />

                <TextView
                    android:id="@+id/textView_item_centre_certificate_hzslrname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/zitiyanse3"
                    android:layout_marginBottom="2dp"
                    android:text="换证受理人：李杰" />

                <TextView
                    android:id="@+id/textView_item_centre_certificate_alarmDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/zitiyanse3"
                    android:layout_marginBottom="2dp"
                    android:text="提醒时间：2016-02-03" />
            </LinearLayout>

            <com.cnpc.zhibo.app.view.Myroundcacheimageview
                android:id="@+id/imageView_item_centre_certificate_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="有效时间："
                android:textColor="@color/zitiyanse3" />

            <TextView
                android:id="@+id/textView_item_centre_certificate_validtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015年2月12日-2020年2月20日"
                android:textColor="@color/zitiyanse3" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>