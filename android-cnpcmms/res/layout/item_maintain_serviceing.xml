<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="2dp" >

    <FrameLayout
        android:id="@+id/item_maintain_service_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >

        <TextView
            android:id="@+id/item_maintain_service_dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:text="最近一周维修单"
            android:textColor="@color/heise" />
    </FrameLayout>

    <!-- 下部分 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:background="@drawable/baise_shape"
        android:orientation="horizontal"
        android:padding="4dp" >

        <!-- 左侧 -->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/item_yuan" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/baise"
            android:orientation="vertical"
            android:paddingLeft="6dp"
            android:paddingRight="6dp" >

            <!-- 维修订单 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                 >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单信息"
                    android:textColor="@color/heise" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/maintain_service_stateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已完成"
                    android:textColor="#ffff0000" />
            </LinearLayout>

            <com.cnpc.zhibo.app.view.DashedLine
                android:layout_width="match_parent"
                android:layout_height="10px"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <com.cnpc.zhibo.app.view.Myroundcacheimageview
                    android:id="@+id/item_maintainhome_serivce_leftimage"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="6dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/iconfont_jiayouzhan" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toLeftOf="@+id/item_maintainhome_serivce_leftimage"
                    android:orientation="vertical" >
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toLeftOf="@+id/item_maintainhome_service_leftimage"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="编号："
                            android:textColor="@color/heise" />

                        <TextView
                            android:id="@+id/textView_item_maintain_serviceing_indentNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="123456789"
                            android:maxLines="1"
                            android:textColor="@color/heise" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toLeftOf="@+id/item_maintainhome_serivce_leftimage"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="名称:"
                            android:textColor="@color/heise" />

                        <TextView
                            android:id="@+id/item_maintain_service_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="月坛加油站"
                            android:textColor="@color/heise" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toLeftOf="@+id/item_maintain_leftimage"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="问题:"
                            android:textColor="@color/heise" />

                        <TextView
                            android:id="@+id/item_maintain_service_problem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:singleLine="true"
                            android:text="加油机不出油"
                            android:textColor="@color/heise" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toLeftOf="@+id/item_maintain_leftimage"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="时间:"
                            android:textColor="@color/heise" />

                        <TextView
                            android:id="@+id/item_maintain_service_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="2016.02.16 18：00"
                            android:textColor="@color/heise" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            
            <com.cnpc.zhibo.app.view.DashedLine
                android:layout_width="match_parent"
                android:layout_height="10px"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp" />

            <LinearLayout
                android:id="@+id/item_maintain_page_Linearlayout_footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:orientation="horizontal"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/item_maintain_serviceing_finishservice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_maintain_selector_button"
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="2dp"
                    android:text="完成维修"
                    android:textColor="@drawable/item_maintain_selector_buttontextcolor"
                    android:visibility="gone" />

                <RatingBar
                    android:id="@+id/item_maintain_serviceing_ratingBar"
                    style="@style/MyRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="3"
                    android:stepSize="1"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="0.1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/item_maintain_serviceing_closeIndent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_maintain_selector_button"
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="2dp"
                    android:text="关闭订单"
                    android:visibility="gone"
                    android:textColor="@drawable/item_maintain_selector_buttontextcolor" />

                <TextView
                    android:id="@+id/item_maintain_serviceing_newapplylist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_maintain_selector_button"
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="2dp"
                    android:text="新建报销单"
                    android:textColor="@drawable/item_maintain_selector_buttontextcolor"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <!-- 右侧 -->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/item_yuan" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="10dp" />

</LinearLayout>