<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dingbubeijingse"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".MyActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/dingbubeijingse" >

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" >

            <ImageView
                android:id="@+id/imageView_myacitity_zuo"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/back"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textview_myactivity_zuo"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:clickable="true"
                android:gravity="center"
                android:padding="5dp"
                android:text="左边"
                android:textColor="@color/baise"
                android:visibility="gone" />
        </TableLayout>

        <TextView
            android:id="@+id/textView_myactity_titlebar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:text="首页"
            android:textColor="@color/baise" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" >

            <ImageView
                android:id="@+id/imageView_myactity_you"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/ic_launcher"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textview_myacitivity_you"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:clickable="true"
                android:gravity="center"
                android:padding="5dp"
                android:text="右边"
                android:textColor="@color/baise"
                android:visibility="gone" />
        </TableLayout>
    </RelativeLayout>

</LinearLayout>