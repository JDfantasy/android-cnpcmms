<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Petrochina_station_seemessageActivity" >

    <include layout="@layout/activity_my" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/commonality_interface" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/commonality_interface"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textview_petrochina_servicerate_stationseemessage_stationmessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/huise"
            android:gravity="center"
            android:text="加油站信息"
            android:textColor="@color/hongse" />

        <TextView
            android:id="@+id/textview_petrochina_servicerate_stationseemessage_stationmonads"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/huise"
            android:gravity="center"
            android:text="服务项目"
            android:textColor="@color/zitiyanse3" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/commonality_interface" >

        <WebView
            android:id="@+id/webview_petrochina_servicerate_stationseemessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/linearlayout_petrochina_servicerate_stationseemessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/commonality_interface"
            android:orientation="vertical"
            android:visibility="gone" >

            <ListView
                android:id="@+id/listview_petrochina_servicerate_stationseemessage_stationmonads"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </ListView>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>