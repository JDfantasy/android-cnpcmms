<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     android:background="@color/dingbubeijingse"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context=".Petrochina_examine_entryActivity" >

    <include layout="@layout/activity_my" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/commonality_interface"
        android:orientation="vertical"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/imageView_petrochina_examine_search"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:src="@drawable/search" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:paddingTop="1dp"
        android:paddingBottom="10dp"
        android:background="@color/commonality_interface"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textview_petrochina_examine_unexamine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:text="未审批"
            android:background="@color/baise"
            android:textColor="@color/blue" />

        <TextView
            android:id="@+id/textview_petrochina_examine_examine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/baise"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:text="已审批"
            android:textColor="@color/zitiyanse5" />
    </LinearLayout>

    

    <com.azy.app.news.view.pullrefresh.PullToRefreshListView
        android:id="@+id/listView_petrochina_examine_entry"
        android:layout_width="match_parent"
        android:background="@color/commonality_interface"
        android:layout_height="match_parent" >
    </com.azy.app.news.view.pullrefresh.PullToRefreshListView>

</LinearLayout>