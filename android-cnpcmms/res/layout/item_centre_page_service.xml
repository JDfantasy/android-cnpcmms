<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/commonality_interface"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <TextView
        android:id="@+id/textView_item_centre_page_service_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:padding="4dp"
        android:gravity="center"
        android:text="最后一周的维修单"
        android:textColor="@color/zitiyanse5"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/baise_shape"
        android:orientation="vertical" >

        <!-- 内容部分 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:orientation="horizontal"
            android:padding="4dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:src="@drawable/item_yuan" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="6dp"
                        android:text="订单信息" />

                    <TextView
                        android:id="@+id/textView_item_centre_page_service_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="6dp"
                        android:text="完成待确认"
                        android:textColor="@color/hongse" />
                </RelativeLayout>

                <com.cnpc.zhibo.app.view.DashedLine
                    android:id="@+id/dashedLine1"
                    android:layout_width="match_parent"
                    android:layout_height="10px"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/textView_item_centre_page_service_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:text="订单编号：C1118791255" />

                        <TextView
                            android:id="@+id/textView_item_centre_page_service_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:text="问题描述：水电  漏电" />

                        <TextView
                            android:id="@+id/textView_item_centre_page_service_statetime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:text="等待时间：0天4小时39分" />

                        <TextView
                            android:id="@+id/textView_item_centre_page_service_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:text="订单时间：2016年4月8日 10:09" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0" >

                        <com.cnpc.zhibo.app.view.Myroundcacheimageview
                            android:id="@+id/imageview_item_centre_page_service_icon"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_margin="6dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/iconfont_jiayouzhan" />
                    </RelativeLayout>
                </LinearLayout>
                <!-- 底部菜单的位置 -->

                <LinearLayout
                    android:id="@+id/linearlayout_item_centre_page_service_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                     >

                    <com.cnpc.zhibo.app.view.DashedLine
                        android:id="@+id/dashedLine2"
                        android:layout_width="match_parent"
                        android:layout_height="10px"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp" >

                        <RatingBar
                            android:id="@+id/ratingBar_item_centre_page_service"
                            style="@style/MyRatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="6dp"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:rating="3"
                            android:stepSize="1"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/textView_item_centre_page_service_verify"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignTop="@+id/ratingBar_item_centre_page_service"
                            android:background="@drawable/item_maintain_selector_button"
                            android:gravity="center"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:layout_marginRight="6dp"
                            android:text="确认订单"
                            android:textColor="@drawable/item_maintain_selector_buttontextcolor"
                            android:visibility="invisible" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="0"
                android:src="@drawable/item_yuan" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="10dp" />

</LinearLayout>