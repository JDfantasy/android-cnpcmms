<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baise"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/imageview_item_centre_funtion_introduce_select_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/woyaobaoxiu" />

    <TextView
        android:id="@+id/textView_item_centre_funtion_introduce_select_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageview_item_centre_funtion_introduce_select_icon"
        android:gravity="center_vertical"
        android:text="我要报修" />

    <ImageView
        android:id="@+id/imageview_item_centre_funtion_introduce_select_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/right_back" />

</RelativeLayout>