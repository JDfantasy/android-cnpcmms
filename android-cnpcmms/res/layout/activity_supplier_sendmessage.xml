<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dingbubeijingse"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".Supplier_sendmessageActivity" >

    <include layout="@layout/activity_my" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/commonality_interface"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="10dp"
            android:visibility="gone" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收件人:"
                android:textColor="@color/zitiyanse3" />

            <LinearLayout
                android:id="@+id/lll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/lian_xi_ren_add"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ease_type_select_btn_nor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView1"
                android:layout_toLeftOf="@+id/lll"
                android:layout_toRightOf="@+id/textView1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/activity_sendmessage_shoujianren"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/zitiyanse3" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/fengexian" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/baise"
            android:padding="10dp" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标 题:"
                android:textColor="@color/zitiyanse3" />

            <EditText
                android:id="@+id/supplier_notice_edittext_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/textView3"
                android:background="@color/baise"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:singleLine="true"
                android:hint="请输入标题内容"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColorHint="@color/zitiyanse3"
                android:textCursorDrawable="@drawable/color_cursor_shape"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/fengexian" />

        <EditText
            android:id="@+id/supplier_notice_edittext_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/baise"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="请输入要发布公告的内容"
            android:padding="10dp"
            android:textColor="@color/zitiyanse3"
            android:textColorHint="@color/zitiyanse3"
            android:textCursorDrawable="@drawable/color_cursor_shape"
            android:textSize="14sp" >
        </EditText>
    </LinearLayout>

</LinearLayout>