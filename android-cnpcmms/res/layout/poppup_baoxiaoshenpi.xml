<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000"
    android:orientation="vertical"
    android:padding="20dp" >

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/baise_shape"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="备注信息" />

        <EditText
            android:id="@+id/editText_popup_baoxiao_message"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/baise"
            android:gravity="left"
            android:hint="请输入备注信息"
            android:padding="4dp"
            android:textColorHint="@color/zitiyanse3"
            android:textSize="14sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/fengexian" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/huise"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/button__popup_baoxiao_agree"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="0.5dp"
                android:layout_weight="1"
                android:background="@color/baise"
                android:text="同意请求" />

            <Button
                android:id="@+id/button__popup_baoxiao_unagree"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="0.5dp"
                android:layout_weight="1"
                android:background="@color/baise"
                android:text="驳回请求" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>