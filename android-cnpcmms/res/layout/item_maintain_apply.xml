<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="2dp" >

    <FrameLayout
        android:id="@+id/item_maintain_apply_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >

        <TextView
            android:id="@+id/item_maintain_apply_dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:text="最近一周报销单"
            android:textColor="@color/heise" />
    </FrameLayout>

    <!-- 下部分 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:background="@drawable/baise_shape"
        android:orientation="horizontal"
        android:padding="4dp" >

        <!-- 左侧 -->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/item_yuan" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/baise"
            android:orientation="vertical"
            android:paddingLeft="6dp"
            android:paddingRight="6dp" >

            <!-- 维修订单 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                 >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单信息"
                    android:textColor="@color/heise" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/maintain_apply_stateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已报销"
                    android:textColor="#ffff0000" />
            </LinearLayout>
            
            <com.cnpc.zhibo.app.view.DashedLine
                android:layout_width="match_parent"
                android:layout_height="10px"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <com.cnpc.zhibo.app.view.Myroundcacheimageview
                    android:id="@+id/item_maintain_apply_leftimage"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="6dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/iconfont_jiayouzhan" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:orientation="vertical" >
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="编号："
                            android:textColor="@color/heise" />

                        <TextView
                            android:id="@+id/textView_item_maintain_apply_indentNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="123456789"
                            android:maxLines="1"
                            android:textColor="@color/heise" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="名称:"
                            android:textColor="@color/heise" />

                        <TextView
                            android:id="@+id/item_maintain_apply_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="月坛加油站"
                            android:textColor="@color/heise" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="问题:"
                            android:textColor="@color/heise" />

                        <TextView
                            android:id="@+id/item_maintain_apply_problem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:singleLine="true"
                            android:text="加油机不出油"
                            android:textColor="@color/heise" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="时间:"
                            android:textColor="@color/heise" />

                        <TextView
                            android:id="@+id/item_maintain_apply_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="2016.02.16 18：00"
                            android:textColor="@color/heise" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <!-- <TextView
                android:id="@+id/item_maintain_apply_footer_Line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/item_line"
                android:visibility="visible" /> -->
                
            <com.cnpc.zhibo.app.view.DashedLine
                android:layout_width="match_parent"
                android:layout_height="10px"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp" />

            
    	     
            <!-- 底部按钮两个 发送 修改 -->

            <RelativeLayout
                android:id="@+id/maintain_apply_footerbottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                 >

                <TextView
                    android:id="@+id/item_maintain_apply_totalMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:padding="1dp"
                    android:text="￥：56888元"
                    android:textColor="@color/hongse" />

                <TextView
                    android:id="@+id/item_maintain_apply_footerbottom_modify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/item_maintain_selector_button"
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="2dp"
                    android:text="修      改"
                    android:textColor="@drawable/item_maintain_selector_buttontextcolor"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/item_maintain_apply_footerbottom_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/item_maintain_selector_button"
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="2dp"
                    android:text="发      送"
                    android:textColor="@drawable/item_maintain_selector_buttontextcolor"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>

        <!-- 右侧 -->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/item_yuan" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="10dp" />

</LinearLayout>