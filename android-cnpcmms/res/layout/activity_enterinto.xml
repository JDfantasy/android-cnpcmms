<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dingbubeijingse"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".LogonActivity" >

    <include layout="@layout/activity_my" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/baise"
        android:orientation="vertical" >
         <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5" >

            <ImageView
                android:id="@+id/imageView_enterinto_logo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_launcher" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/LinearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/huise_biankuang"
                android:orientation="vertical"
                android:padding="10dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="用户名：" />

                    <EditText
                        android:id="@+id/editext_enterinto_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/baise"
                        android:gravity="center_vertical"
                        android:hint="请输入用户名"
                        android:inputType="number"
                        android:textColor="@color/zitiyanse3"
                        android:textSize="@dimen/ediziti12sp" >

                        <requestFocus />
                    </EditText>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/huise" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="密   码：" />

                    <EditText
                        android:id="@+id/editext_enterinto_pwd"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/baise"
                        android:gravity="center_vertical"
                        android:hint="请输入你的密码"
                        android:inputType="textPassword"
                        android:textColor="@color/zitiyanse3"
                        android:textSize="@dimen/ediziti12sp" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp" >

                <CheckBox
                    android:id="@+id/checkBox_enterinto_jizhumima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:button="@drawable/checked_select"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="记住密码"
                    android:textColor="@color/zitiyanse3"
                    android:textSize="@dimen/ediziti12sp" />

                <TextView
                    android:id="@+id/textView_enterinto_wangjimima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/checkBox_enterinto_jizhumima"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="忘记密码"
                    android:textColor="@color/zitiyanse1"
                    android:textSize="@dimen/ediziti12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/button_enterinto_denglu"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/item_maintain_selector_button"
                    android:gravity="center"
                    android:text="登录"
                    android:textColor="@drawable/item_maintain_selector_buttontextcolor" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

   

</LinearLayout>